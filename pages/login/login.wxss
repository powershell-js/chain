.conter{
  width: 100%;
  box-sizing: border-box;
  /* border:1rpx solid red; */
  position: fixed;
  top: 14%;
}
.user{
  width: 90%;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  margin-bottom: 40rpx;
  align-items: center;
}
.img{
  display: flex;
  justify-content:center;
  align-items: center;
  margin-bottom: 150rpx;
}
.img>view{
  width: 200rpx;
  height: 200rpx;
  display: flex;
  justify-content:center;
  align-items: center;
  border-radius: 50%;
  overflow: hidden;
}
.img>view>image{
  width: 200rpx;
  height: 200rpx;
}
.user_1{
  border:1rpx solid #ccc;
  width: 80%;
  border-radius: 10rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
}
.password{
  width: 90%;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.password_1{
  width: 80%;
  border:1rpx solid #ccc;
  border-radius: 10rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
}
.login{
  width: 90%;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 10rpx;
  text-align: center;
  color:#fff;
  background: #68A8FF;
  margin: 40rpx auto;
}
input{
  margin-left: 20rpx;
}
.tost{
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  background: rgba(0,0,0,0.4);
  display: flex;
  align-items: center;
  justify-content: center;
}
.tost_list{
  width: 40%;
  text-align: center;
  height: 100rpx;
  background: #fff;
  line-height: 100rpx;
  border-radius: 10rpx;
}