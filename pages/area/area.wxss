page{
background: #EFEEF3;
  font-size:28rpx;
}
.conter{
  width: 100%;
  padding-top: 20rpx;
}
.contont{
  padding: 4%;
  width: 92%;
  background: #fff;
  
}
.list{
  display: flex;
  flex-wrap: wrap;
  align-items:center;/*垂直居中*/
}
.list>view{
  /* width: 100rpx; */
  width: 31%;
  text-align: center;
  background: #EEEFF3;
  margin: 1%;
  height: 80rpx;
  line-height: 80rpx;
}
.list>view:nth-last-child(1){
  width: 330rpx;
}
.blue{
  background: #6AA8FD!important;
  color:#fff;
}
.fixed{
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  box-sizing: border-box;
  background:rgba(0,0,0,0.2);
}
.input{
  width: 100%;
  background: #fff;
  position: absolute;
  top: 400rpx;
  display: flex;
  flex-direction: column;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
  padding: 20rpx;
}
.confirm{
  display: flex;
  flex-direction: row;
  align-items:center;/*垂直居中*/
}
.confirm>view{
  width: 100rpx;
  margin-top: 10rpx;
}
.input_1{
  display: flex;
  flex-direction: row;
  align-items:center;/*垂直居中*/
}
input{
  border: 1rpx solid #ccc;
  width: 100rpx;
  margin-right: 10rpx;
}
.cancel{
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #6AA8FD;
  color: #fff;
  text-align: center;
  margin: 20rpx;
}
.sure{
  width: 100%;
  height: 140rpx;
  box-sizing: border-box;
  /* border:1rpx solid red; */
  background:#fff; 
  position: fixed;
  bottom:1;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items:center;/*垂直居中*/
  z-index: 999;
}
.sures{
  width: 90%;
  height: 100rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  color:#fff;
  background:#6AA8FD; 
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items:center;/*垂直居中*/
}
.areas{
  width: 200rpx!important;
  display: flex;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
  color:rgb(49, 47, 47);
}


