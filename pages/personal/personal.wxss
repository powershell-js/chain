.tost {
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
}

.tost_list {
  width: 40%;
  text-align: center;
  height: 100rpx;
  background: #fff;
  line-height: 100rpx;
  border-radius: 10rpx;
}

page {
  background: rgb(241, 240, 245);
  font-size: 30rpx;
}

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center; /*垂直居中*/
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  line-height: 166rpx;
}

.usermotto {
  margin-top: 200px;
}

.list {
  display: flex;
  flex-direction: row;
  align-items: center; /*垂直居中*/
  padding: 18rpx 20rpx;
}

.conter {
  width: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.conter>view {
  width: 100%;
  background: #fff;
  margin: 20rpx 0;
}

.list_img {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  margin-top: 10rpx;
}

.login {
  margin-left: 60rpx;
}

.logins {
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  box-sizing: border-box;
  border: 1rpx solid #68a8ff;
  padding: 20rpx 40rpx;
}
.red {
  color: red;
}

/* 动画测试 */
.animation{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  position: fixed;
  animation: myfirst 5s linear 2s infinite alternate;
}
.animation>image{
  width: 80rpx;
  height: 80rpx;
}
@keyframes myfirst
{
0%   {left:0px; bottom:0px;}
25%  {left:100%; bottom:0px;}
50%  {left:50%; bottom:200px;}
75%  {left:0px; bottom:200px;}
100% {left:0px; bottom:0px;}
}
.animate{
  animation: myf 5s linear 2s infinite alternate;
}
@keyframes myf
{
0%   {background:#fff; color:#000;}
25%  {background:#000; color:#fff;}
50%  {background:#fff; color:#000;}
75%  {background:#000; color:#fff;}
100% {background:#fff; color:#000;}
}
